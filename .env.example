# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/user_management
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=user_management
DATABASE_USER=username
DATABASE_PASSWORD=password

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Domain and URL Configuration
# For Development (when running locally)
FRONTEND_URL=http://localhost:8000
API_URL=http://localhost:8000
DOMAIN=localhost:8000

# For Staging (example values)
# FRONTEND_URL=https://staging-app.yourdomain.com
# API_URL=https://staging-api.yourdomain.com
# DOMAIN=staging.yourdomain.com

# For Production (example values)
# FRONTEND_URL=https://app.yourdomain.com
# API_URL=https://api.yourdomain.com
# DOMAIN=yourdomain.com

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Your App Name
EMAIL_FALLBACK_TO_FILE=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: Redis (for future session management, caching)
# REDIS_URL=redis://localhost:6379

# Optional: Payment Processing (Stripe)
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Optional: Analytics and Monitoring
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# Optional: Social Authentication (for future features)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret